@model List<Casgem_CodeFirstProject.DAL.Entities.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Hizmetler</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İkon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServicesID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>
            <td><a href="/AdminService/DeleteAdminService/@item.ServicesID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminService/UpdateAdminService/@item.ServicesID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a class="btn btn-info" href="/AdminServices/AddAdminService">Yeni Servis Ekle</a>
